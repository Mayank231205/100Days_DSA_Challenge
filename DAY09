#include <stdio.h>
#include <string.h>

int main() {
    char str[100];     // create character array
    int i, length;

    printf("Enter a string: ");
    scanf("%s", str);

    length = strlen(str);   // find length of string

    printf("Reversed string: ");

    // print characters from last to first
    for(i = length - 1; i >= 0; i--) {
        printf("%c", str[i]);
    }

    return 0;
}
